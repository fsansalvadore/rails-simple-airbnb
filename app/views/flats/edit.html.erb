<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-6 align-middle">
      <%= form_for(@flat) do |f| %>
        <h1>Edit Flat @flat.name</h1>
        <% if @flat.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @flat.errors.full_messages.each do |message| %>
                <li>
                  <div class="alert alert-danger" role="alert">
                    <%= message %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image_url %>
          <%= f.text_field :image_url, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :number_of_guests %>
          <%= f.select :number_of_guests, options_for_select(1..4), class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price_per_night %>
          <%= f.text_field :price_per_night, class: "form-control" %>
        </div>

        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
